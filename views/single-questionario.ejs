<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desafio Fullstack</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/flexboxgrid.css">
    <link rel="stylesheet" href="/css/base.css">
</head>
<body>
    
    <div class="nav">
        <input type="checkbox" id="nav-check">
        <div class="nav-header">
          <div class="nav-title">
            Agrotools
          </div>
        </div>
        <div class="nav-btn">
          <label for="nav-check">
            <span></span>
            <span></span>
            <span></span>
          </label>
        </div>
        
        <div class="nav-links">
          <a href="/questionarios">Home</a>
          <a href="/novo">Novo Question√°rio</a>
        </div>
    </div>

    <div class="container-fluid">
        <h2><%= questionarios.titulo %></h2>
        <div class="row shadow-sm bg-white mb-3">
            <% 
            var i = 0;
            questionarios.perguntas.forEach(function(pergunta) { %>
                <div class="col-xs-12 mb-4">
                    <div class="row">
                        <div class="col-xs-12">
                            <h3><%= pergunta %></h3>
                            <% if(respostas != undefined){ %>
                            <p><%=
                                    respostas.respostas[i];
                                %>
                            </p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% i++ }) %>
        </div>
    </div>

</body>
</html>